<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.jebussystems.levelingglass"
    android:id="@+id/nolevel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp" >

    <com.jebussystems.levelingglass.view.AudioLevelView
        android:id="@+id/audio_view"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="2dp"
        custom:level_in_db="0"
        custom:ceiling_in_db="0"
        custom:floor_in_db="-1"
        custom:color="@android:color/holo_orange_light" />

</LinearLayout>
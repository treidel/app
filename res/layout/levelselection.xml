<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radiogroup_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio_levelselection_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/levelselection_none" />

        <RadioButton
            android:id="@+id/radio_levelsection_digitalpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/levelselection_digitalpeak" />

        <RadioButton
            android:id="@+id/radio_levelsection_ppm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/levelselection_ppm" />

        <RadioButton
            android:id="@+id/radio_levelsection_vu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/levelselection_vu" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seekbar_holdtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />

</LinearLayout>